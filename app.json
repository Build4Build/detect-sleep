{
  "expo": {
    "name": "Sleep Detector",
    "slug": "detect-sleep",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.sleepdetector.app",
      "buildNumber": "1",
      "infoPlist": {
        "NSUserActivityTypes": [
          "WidgetKitIntentExtension"
        ],
        "UIBackgroundModes": [
          "fetch"
        ],
        "NSMotionUsageDescription": "We use motion data to more accurately detect when you're asleep or awake",
        "NSHealthShareUsageDescription": "We use this data to compare our sleep detection with your health data if you choose to enable this feature",
        "NSHealthUpdateUsageDescription": "We don't write any health data"
      },
      "config": {
        "usesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.sleepdetector.app",
      "versionCode": 1,
      "permissions": [
        "ACTIVITY_RECOGNITION"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "widgets": [
      {
        "name": "SleepStatsWidget",
        "dataFetcher": {
          "url": "SleepStatsWidget" 
        },
        "description": "View your sleep status and today's sleep duration",
        "size": "small",
        "backgroundColor": "#ffffff",
        "accessible": true
      }
    ],
    "plugins": [
      [
        "expo-widgets",
        {
          "ios": {
            "devTeamId": "2V8LZ2444Y" 
          }
        }
      ],
      "expo-task-manager"
    ],
    "extra": {
      "eas": {
        "projectId": "sleep-detector-project"
      }
    }
  }
}
