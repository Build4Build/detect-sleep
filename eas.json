{
  "cli": {
    "version": ">= 5.9.1",
    "requireCommit": false,
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "ios": {
        "simulator": true,
        "resourceClass": "medium"
      },
      "android": {
        "gradleCommand": ":app:assembleDebug",
        "buildType": "apk",
        "resourceClass": "medium",
        "withoutCredentials": true
      }
    },
    "preview": {
      "distribution": "internal",
      "ios": {
        "simulator": false,
        "resourceClass": "medium",
        "credentialsSource": "remote"
      },
      "android": {
        "buildType": "apk",
        "withoutCredentials": true
      }
    },
    "production": {
      "autoIncrement": true,
      "ios": {
        "resourceClass": "medium",
        "credentialsSource": "remote"
      },
      "android": {
        "buildType": "app-bundle",
        "credentialsSource": "remote",
        "gradleCommand": ":app:bundleRelease"
      }
    }
  },
  "submit": {
    "production": {
      "ios": {
        "ascAppId": "6743064638",
        "appleTeamId": "2V8LZ2444Y"
      },
      "android": {
        "serviceAccountKeyPath": "./pc-api-key.json",
        "track": "production"
      }
    }
  }
}
